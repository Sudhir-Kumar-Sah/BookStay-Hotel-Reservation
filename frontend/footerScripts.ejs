<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

<script>
    const accountIcon = document.getElementById("account-icon");
    const accountIconClick = document.getElementById("account-icon-click");
    // toggling hide and show for signup and login onclick
    const showSignupOrLogin = () => {
        accountIconClick.style.display = "block";
    }
    const hideSignupOrLogin = () => {
        accountIconClick.style.display = "none";
    }
    // to check click is occured outside the account icon
    const isClickedOutsideAccountIcon = (element, event) => {
        return !element.contains(event.target);
    }

    // Variable to track the visibility state of the element
    let isElementVisible = false;

    // Function to toggle the visibility of the element
    const toggleSignupOrLogin = () => {
        if (isElementVisible) {
            hideSignupOrLogin();
        } else {
            showSignupOrLogin();
        }
        // Toggle the visibility state
        isElementVisible = !isElementVisible;
    }

    // Event listener to toggle the visibility when account icon is clicked
    accountIcon.addEventListener("click", toggleSignupOrLogin);

    // Event listener to hide the element when user clicks outside
    document.addEventListener("click", (event) => {
        if (isClickedOutsideAccountIcon(accountIcon, event)) {
            hideSignupOrLogin();
            isElementVisible = false;
        }
    });
</script>